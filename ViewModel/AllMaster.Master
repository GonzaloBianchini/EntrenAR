<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="AllMaster.Master.cs" Inherits="ViewModel.AllMaster" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="\content\MyStyles.css" rel="stylesheet" />

    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" runat="server">
        <%--aca ponemos modal--%>

        <!-- Modal Cambios guardados!! -->
        <div class="modal fade" id="modalGuardarCambios" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalGuardarCambiosLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalGuardarCambiosTitle">Guardar Cambios</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <asp:Label Text="Cambios guardados!" ID="txtModalBodyGuardarCambios" runat="server" />
                        <%--<asp:TextBox ID="txtEditarNombre" runat="server" CssClass="form-control" placeholder="Nuevo Nombre"></asp:TextBox>--%>
                    </div>
                    <div class="modal-footer">
                        <%--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>--%>
                        <asp:Button ID="btnOk" CssClass="btn btn-primary" Text="Ok" runat="server" OnClick="btnOk_Click" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Generico, desde el back cambio todo para reutilizarlo -->
        <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <asp:Label Text="Titulo Modal" ID="txtModalTitle" CssClass="modal-title" runat="server" />
                        <%--<h5 class="modal-title" id="modalTitle">Agregar Usuario</h5>--%>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <asp:Label Text="Texto principal modal" ID="txtModalBody" runat="server" />
                        <%--<asp:TextBox ID="TextBox1" runat="server" CssClass="form-control" placeholder="Nombre"></asp:TextBox>--%>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <asp:Button Text="Aceptar" ID="btnAceptar" CssClass="btn btn-primary" OnClick="btnAceptar_Click" runat="server" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Agregar -->
        <div class="modal fade" id="modalAgregar" tabindex="-1" aria-labelledby="modalAgregarLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalAgregarLabel">Agregar Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <asp:TextBox ID="txtNombre" runat="server" CssClass="form-control" placeholder="Nombre"></asp:TextBox>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <asp:Button ID="btnGuardarUsuario" runat="server" CssClass="btn btn-primary" Text="Guardar" />
                    </div>
                </div>
            </div>
        </div>
        <%--aca finalizamos modal--%>

        <div class="container-fluid">
            <div class="row">
                <!-- Barra lateral -->
                <nav class="col-md-2 d-md-block sidebar">
                    <div class="position-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="DashBoard.aspx">
                                    <asp:Label Text="Inicio" ID="lblInicio" class="bi bi-house" runat="server" />
                                    <%--<span class="bi bi-house"></span>Inicio--%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="ViewExercises.aspx">
                                    <asp:Label Text="Lista de Ejercicios" ID="lblEjercicios" class="bi bi-list-check" runat="server" />
                                    <%--<span class="bi bi-list-check"></span>Lista de ejercicios--%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="ViewPartners.aspx">
                                    <asp:Label Text="Partners" ID="lblPartners" class="bi bi-people" runat="server" />
                                    <%--<span class="bi bi-people"></span>Clientes--%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="TrainerRequests.aspx">
                                    <asp:Label Text="Requests" ID="lblRequests" class="bi bi-list-check" runat="server" />
                                    <%--<span class="bi bi-list-check"></span>Solicitudes--%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="NewExercise.aspx">
                                    <asp:Label Text="Nuevo Ejercicio" ID="lblNewExercise" class="bi bi-list-check" runat="server" />
                                    <%--<span class="bi bi-list-check"></span>Nuevo Ejercicio--%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="NewPartner.aspx">
                                    <asp:Label Text="Nuevo Partner" ID="lblNewPartner" class="bi bi-list-check" runat="server" />
                                    <%--<span class="bi bi-list-check"></span>Nuevo Partner--%>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <!-- Contenido principal -->
                <div class="col-md-10">
                    <!-- Barra superior -->
                    <nav class="navbar navbar-expand-lg navbar-custom">
                        <div class="container-fluid">
                            <span class="navbar-brand">TRAINER</span>
                            <div class="d-flex">
                                <span class="navbar-text me-3">Usuario: admin</span>
                                <a href="#" class="nav-link">Cerrar sesión</a>
                            </div>
                        </div>
                    </nav>

                    <!-- Placeholder para el contenido -->
                    <div class="p-3">
                        <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                        </asp:ContentPlaceHolder>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
